{
  "version": 2,
  "builds": [
    {
      "src": "backend/**/*",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "buildCommand": "python manage.py collectstatic --noinput"
      }
    },
    {
      "src": "frontend/**/*",
      "use": "@vercel/static",
      "config": {
        "buildCommand": "npm run build",
        "outputDirectory": "frontend/build"
      }
    }
  ],
  "routes": [
    { "src": "/api/.*", "dest": "backend/wsgi.py" },
    { "src": "/(.*)", "dest": "frontend/build/$1" }
  ]
}
