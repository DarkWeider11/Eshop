{
  "builds": [
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "frontend/build" }
    },
    {
      "src": "eshop/wsgi.py",
      "use": "@ardnt/vercel-python-wsgi",
      "config": {
        "maxLambdaSize": "15mb",
        "runtime": "python3.9",
        "output": "handler.py"
      }
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "eshop/wsgi.py" },
    { "src": "/(.*)", "dest": "frontend/index.html" }
  ]
}
